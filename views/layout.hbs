</head>

<body>
   
<div class="topnav" id="myTopnav">
  <img class ="imageLogo" src ="images/logo_N&L2.png "> 
  <a href="/">Home</a>
  <a href="/services/aboutUs">About us</a>
  <div class="dropdown">
    <button class="dropbtn">Services
      <i class="fa fa-caret-down"></i>
    </button>
    <div class="dropdown-content">
      <a href="/services/beautyShop">Beauty Shop</a>
      <a href="/services/photoStudio">Photo Studio</a>
      <a href="/services/hotel">Hotel</a>
    </div>
  </div>
  <a href="/services/location">Location</a>

  {{#if currentUser}}

      <div class="dropdown">
    <button class="dropbtn">Account
      <i class="fa fa-caret-down"></i>
    </button>
    <div class="dropdown-content">
      <a href="/profile">Profile</a>
      <a href="/auth/logout">Log out</a>
    </div>
  </div>

  {{else}}

    <div class="dropdown">
    <button class="dropbtn">Account
      <i class="fa fa-caret-down"></i>
    </button>
    <div class="dropdown-content">
      <a href="/auth/login">Log in</a>
      <a href="/auth/register">Sign up</a>
    </div>
  </div>
  {{/if}}
  <a href="javascript:void(0);" class="icon" onclick="myFunction()">&#9776;</a>
</div>

{{{body}}}

</body>
    <script>
/* Toggle between adding and removing the "responsive" class to topnav when the user clicks on the icon */
function myFunction() {
  var x = document.getElementById("myTopnav");
  if (x.className === "topnav") {
    x.className += " responsive";
  } else {
    x.className = "topnav";
  }
}
    </script>

</html>